<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/grey</item>
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="AppTheme.PlayListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="AppTheme.MainStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="DownloadDialog" parent="@style/ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/download_corner_radius</item>
    </style>

</resources>
